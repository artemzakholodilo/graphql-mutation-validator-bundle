{
  "name": "artemzakholodilo/graphql-mutation-validator-bundle",
  "description": "Provide a base class to validate user data sent in a GraphQL mutation and return validations errors.",
  "type": "symfony-bundle",
  "license": "MIT",
  "keywords": ["GraphQL", "Validation"],
  "authors": [
    {
      "name": "AssoConnect",
      "homepage": "https://www.assoconnect.com"
    },
    {
      "name": "Sylvain Fabre"
    }
  ],
  "autoload": {
    "psr-4": {
      "AssoConnect\\GraphQLMutationValidatorBundle\\": ""
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },
  "require": {
    "php": "^7.2",
    "overblog/graphql-bundle": "^0.11",
    "symfony/validator": "^5.0",
    "doctrine/annotations": "^1.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "symfony/twig-bundle": "^4.0",
    "symfony/security-bundle": "^4.0",
    "symfony/yaml": "^5.0",
    "symfony/templating": "^5.0",
    "symfony/console": "^5.0"
  }
}
